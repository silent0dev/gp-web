{% style %}
.section-{{ section.id }}--padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}

@media(max-width: 768px) {
    .section-{{ section.id }}--padding {
        padding-top: {{ section.settings.padding_top_mob }}px;
        padding-bottom: {{ section.settings.padding_bottom_mob }}px;
    }
}
{% endstyle %}
{% if product.metafields.custom.gallery_image != blank %}
<div class="section-{{ section.id }}--padding">
    <div class="page-width">
        <div class="product-gallery swiper" id="gp-swiper-{{ section.id }}" data-desktop-settings='{"slidesPerView": 1, "spaceBetween": 10}' data-mobile-settings='{"slidesPerView": 1, "spaceBetween": 10}'>
            <div class="swiper-wrapper">
                {% for image in product.metafields.custom.gallery_image.value %}
                    <div class="swiper-slide product-gallery__item">
                        <div class="product-gallery__image">
                            <div class="gp-image">
                                {{ image | img_url: '1240x' | img_tag }}
                            </div>
                        </div>
                        <div class="product-gallery__text">
                            <p class="product-gallery__header">{{ product.metafields.custom.gallery_title.value[forloop.index0] }}</p>
                            <h2 class="product-gallery__description">{{ product.metafields.custom.gallery_text.value[forloop.index0] }}</h2>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-pagination small-hide"></div>
        </div>
    </div>
</div>
{% endif %}
{% schema %}
{
    "name": "Product Gallery",
    "settings": [
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
          },
          {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 50
          },
          {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 50
          },
          {
            "type": "range",
            "id": "padding_top_mob",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "Mobile Padding Top",
            "default": 50
          },
          {
            "type": "range",
            "id": "padding_bottom_mob",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "Mobile Padding Bottom",
            "default": 50
          }
    ]
}
{% endschema %}